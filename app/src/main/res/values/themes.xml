<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SWEN3001_Project_StarvationPrevention" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Buttons</item>
        <item name="colorPrimaryVariant">@color/appMain</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Highlight</item>
        <item name="colorSecondaryVariant">#707070</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:buttonStyle">@style/Button</item>

    </style>

    <!--Light Mode-->
    <!--Screen Color if Light Mode  on  -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Text Background if Light Mode    -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <!-- Button Background if Light Mode on   -->
    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Theme.SWEN3001_Project_StarvationPrevention.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.SWEN3001_Project_StarvationPrevention.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SWEN3001_Project_StarvationPrevention.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>